<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_pan"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_marginTop="6dp"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:background="@color/colorPrimaryDark"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LAGU"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/fan"
            android:layout_width="130dp"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/iv_pan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_musik" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/piring_2" />

            <ImageButton
                android:id="@+id/btn_play_start"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_play_" />

            <TextView
                android:layout_width="wrap_content"
                android:text="PLAY"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_pan_bar"
                android:layout_width="25sp"
                android:layout_height="100sp"
                android:layout_gravity="right"
                android:background="@drawable/index_pin" />


        </FrameLayout>


        <Button

            android:id="@+id/next"
            android:background="@drawable/corner_comment"
            android:layout_width="wrap_content"
            android:text="@string/text_next"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/fan"
            android:layout_toEndOf="@+id/fan" />

    </RelativeLayout>


</LinearLayout>